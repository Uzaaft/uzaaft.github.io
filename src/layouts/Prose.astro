---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description?: string;
  date?: Date;
  image?: string;
}

const { title, description, date, image } = Astro.props;
---

<Layout title={title} description={description} image={image}>
  <article class="article">
    <div class="wrapper">
      <header>
        {date && (
          <time>
            {date.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
          </time>
        )}
        <h1>{title}</h1>
        {description && <p class="desc">{description}</p>}
      </header>
      
      <div class="prose">
        <slot />
      </div>

      <footer>
        <a href="/blog" class="link-arrow back">‚Üê Back to blog</a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .article {
    padding: 6rem 0 8rem;
  }

  .wrapper {
    max-width: 680px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  header {
    text-align: center;
    margin-bottom: 4rem;
  }

  header time {
    font-size: 12px;
    color: #86868b;
  }

  header h1 {
    font-size: clamp(32px, 5vw, 48px);
    margin-top: 1rem;
  }

  header .desc {
    font-size: 21px;
    color: #6e6e73;
    margin-top: 1.5rem;
    max-width: 540px;
    margin-left: auto;
    margin-right: auto;
  }

  .prose {
    color: #6e6e73;
  }

  .prose :global(h2) {
    color: #1d1d1f;
    font-size: 28px;
    margin-top: 48px;
    margin-bottom: 16px;
  }

  .prose :global(h3) {
    color: #1d1d1f;
    font-size: 22px;
    margin-top: 36px;
    margin-bottom: 12px;
  }

  .prose :global(p) {
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 20px;
    padding-left: 24px;
  }

  .prose :global(li) {
    margin-bottom: 8px;
  }

  .prose :global(blockquote) {
    border-left: 3px solid #0071e3;
    padding-left: 20px;
    margin: 32px 0;
    font-style: italic;
    color: #86868b;
  }

  .prose :global(code) {
    font-family: "SF Mono", ui-monospace, monospace;
    font-size: 0.9em;
    background: rgba(0, 0, 0, 0.05);
    padding: 2px 6px;
    border-radius: 4px;
  }

  .prose :global(pre) {
    background: #1d1d1f;
    border-radius: 12px;
    padding: 20px 24px;
    overflow-x: auto;
    margin: 24px 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: #f5f5f7;
    font-size: 14px;
  }

  .prose :global(a) {
    color: #0071e3;
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0,0,0,0.08);
  }

  .back::after {
    display: none;
  }

  :global([data-theme="dark"]) header .desc,
  :global([data-theme="dark"]) .prose { color: #a1a1a6; }
  :global([data-theme="dark"]) .prose :global(h2),
  :global([data-theme="dark"]) .prose :global(h3) { color: #f5f5f7; }
  :global([data-theme="dark"]) .prose :global(code) { background: rgba(255,255,255,0.1); }
  :global([data-theme="dark"]) footer { border-top-color: rgba(255,255,255,0.1); }
</style>
