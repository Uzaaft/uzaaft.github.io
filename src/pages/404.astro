---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found" description="The page you are looking for does not exist." image="/mort.gif">
  <div class="error-page">
    <p class="eyebrow">Error 404</p>
    <h1 class="hero-headline">Page not found</h1>
    <p class="body-large">The page you're looking for doesn't exist.</p>
    <a href="/" class="btn-primary">Go home</a>
  </div>
</Layout>

<style>
  .error-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    padding: 2rem;
  }

  .error-page .eyebrow {
    margin-bottom: 1rem;
  }

  .error-page .body-large {
    margin: 1.5rem 0 2.5rem;
  }
</style>
