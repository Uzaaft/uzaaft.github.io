---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found" description="The page you are looking for does not exist." image="/mort.gif">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center space-y-6">
    <h1 class="text-4xl font-bold">404</h1>
    <p class="text-lg text-text-2">Page not found</p>
    
    <img 
      src="/mort.gif" 
      alt="Confused Mort" 
      class="rounded-lg shadow-lg max-w-xs w-full"
    />

    <a href="/" class="btn-primary mt-4">
      Go home
    </a>
  </div>
</Layout>
