---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog â€“ Uzair Aftab" description="Thoughts on software engineering, open source, and developer tooling.">
  <section class="blog">
    <h1>Blog</h1>

    {posts.length === 0 ? (
      <p class="empty">No posts yet.</p>
    ) : (
      <div class="posts">
        {posts.map((post) => (
          <a href={`/blog/${post.id}`} class="post">
            <span class="title">{post.data.title}</span>
            <span class="date">
              {post.data.pubDate.toLocaleDateString("en-US", { 
                month: "short", 
                day: "numeric", 
                year: "numeric" 
              })}
            </span>
          </a>
        ))}
      </div>
    )}
  </section>
</Layout>

<style>
  .blog {
    max-width: 640px;
    margin: 0 auto;
    padding: 5rem 1.5rem 6rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
    text-align: center;
  }

  .empty {
    text-align: center;
    color: #6e6e73;
  }

  .posts {
    display: flex;
    flex-direction: column;
  }

  .post {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.06);
    text-decoration: none;
  }

  .post:first-child {
    border-top: 1px solid rgba(0,0,0,0.06);
  }

  .title {
    font-weight: 500;
    color: #1d1d1f;
  }

  .post:hover .title {
    color: #0071e3;
  }

  .date {
    font-size: 0.8125rem;
    color: #86868b;
    flex-shrink: 0;
  }

  :global([data-theme="dark"]) .post { border-color: rgba(255,255,255,0.08); }
  :global([data-theme="dark"]) .title { color: #f5f5f7; }
</style>
