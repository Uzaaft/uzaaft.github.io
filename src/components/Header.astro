---
import ThemeToggle from "./ThemeToggle.astro";

const pathname = Astro.url.pathname;
const isHome = pathname === "/";
const isBlog = pathname === "/blog" || pathname.startsWith("/blog/");
---

<header>
  <nav>
    <a href="/" class="logo">Uzair Aftab</a>
    <div class="right">
      <div class="links">
        <a href="/" class:list={{ active: isHome }}>Home</a>
        <a href="/blog" class:list={{ active: isBlog }}>Blog</a>
      </div>
      <ThemeToggle />
    </div>
  </nav>
</header>

<div class="spacer"></div>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(250,250,250,0.72);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
  }

  nav {
    max-width: 640px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1d1d1f;
    text-decoration: none;
  }

  .right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .links {
    display: flex;
    gap: 1.5rem;
  }

  .links a {
    font-size: 0.8125rem;
    color: #6e6e73;
    text-decoration: none;
  }

  .links a:hover,
  .links a.active {
    color: #1d1d1f;
  }

  .spacer {
    height: 48px;
  }

  :global([data-theme="dark"]) header { background: rgba(0,0,0,0.72); }
  :global([data-theme="dark"]) .logo { color: #f5f5f7; }
  :global([data-theme="dark"]) .links a { color: #86868b; }
  :global([data-theme="dark"]) .links a:hover,
  :global([data-theme="dark"]) .links a.active { color: #f5f5f7; }
</style>
